pipeline{ 
  agent any
    environment {
       pom_version = readMavenPom().getVersion()
       pom_artifact = readMavenPom().getArtifactId()
      }
    stages{
      stage (build){
        steps{
          sh label: '', script: 'mvn clean install package'
            echo "pom version is ${pom_version}"
            echo "pom artifact id is ${pom_artifact}"
           }
         }
      
    }
}
