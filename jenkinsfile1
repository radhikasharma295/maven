def name = "sai"
def surname = "sharma"
pipeline{
  agent any
    stages{
       stage("hello"){
          steps{
           echo "hi"
          }
       }
       stage("variable"){
          steps{
           echo "name is ${name} and address is ${surname}"
          }
       }
       stage("reading pom"){
          steps{
           def readpom = readmavenpom 'pom.xml'
           echo "the version is ${readpom.version}"
          }
       }
    }
}
