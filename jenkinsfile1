def name = "sai"
def surname = "sharma"
def readpom;
pipeline{
  agent any
    stages{
       stage("hello"){
          steps{
           echo "hi"
          }
       }
       stage("variable"){
          steps{
           echo "name is ${name} and address is ${surname}"
          }
       }
       stage("reading pom"){
          steps{
           readpom=readMavenPom file: '';
           def version = readpom.version;
           echo "${version}"
          }
       }
    }
}
