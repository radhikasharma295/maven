def name = "sai"
def surname = "sharma"
def readpom = readMavenPom "pom.xml"
pipeline{
  agent any
    stages{
       stage("hello"){
          steps{
           echo "hi"
          }
       }
       stage("variable"){
          steps{
           echo "name is ${name} and address is ${surname}"
          }
       }
       stage("reading pom"){
          steps{
            echo "the version is ${readpom.version}"
          }
       }
    }
}
